<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="edu.orangecoastcollege.cs273.rmillett.audiate">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key"/>

        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".GoogleMapsActivity"
            android:exported="true"
            android:parentActivityName=".LoginActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MainMenuActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".DetectVocalRangeActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ExerciseSelectionMenuActivity"
            android:exported="true"
            android:parentActivityName=".MainMenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".HelpActivity"
            android:parentActivityName=".ExerciseSelectionMenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".EarTrainingQuizActivity"
            android:exported="true"
            android:parentActivityName=".ExerciseSelectionMenuActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LibraryActivity"
            android:exported="true"
            android:parentActivityName=".MainMenuActivity"
            android:screenOrientation="portrait"/>

        <!-- Unused Activity / Backup In Case Firebase Did not Work -->
        <activity
            android:name=".AlternateLoginActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
    </application>

</manifest>