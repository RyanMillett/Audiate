<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".LibraryActivity">

    <TextView
        android:id="@+id/headerTextView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusedByDefault="true"
        android:hint="@string/header_info_hint" />

    <!-- //////////////////////////////////////////////// -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/materialFilterTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:text="@string/select_material" />

        <Spinner
            android:id="@+id/materialSelectionSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3" />



        <TextView
            android:id="@+id/sortMaterialTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/sort_material" />

        <Spinner
            android:id="@+id/sortMaterialSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2" />

    </LinearLayout>

    <!-- //////////////////////////////////////////////// -->

    <LinearLayout
        android:id="@+id/searchLibraryLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/filterMaterialTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/filter_material" />

        <Spinner
            android:id="@+id/filterMaterialSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/searchLibraryTextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/search" />

        <EditText
            android:id="@+id/searchLibraryEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="7" />

    </LinearLayout>

    <!-- //////////////////////////////////////////////// -->

    <ListView
        android:id="@+id/libraryListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </ListView>

    <!-- //////////////////////////////////////////////// -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/selectionNameDisplayTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/selection_name"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/selectionDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="@string/selection_description" />

    </LinearLayout>

    <!-- //////////////////////////////////////////////// -->

    <TextView
        android:id="@+id/playbackOptionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/playback_settings"
        android:textAlignment="center" />

    <!-- //////////////////////////////////////////////// -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/playbackLinearLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/setFundamentalFreqEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/set_fundamental_frequency_hint"
                    android:inputType="number"
                    android:textAlignment="center"
                    android:textSize="15sp" />

                <Button
                    android:id="@+id/testFundamentalFreqButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="playbackHandler"
                    android:text="@string/test_fundamental_frequency"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/playbackOptionsLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/playbackOptionsRadioGroup"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/mode1RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/playback_mode1" />

                    <RadioButton
                        android:id="@+id/mode2RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/playback_mode2" />


                    <RadioButton
                        android:id="@+id/mode3RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/playback_mode3" />

                    <RadioButton
                        android:id="@+id/mode4RadioButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/playback_mode4" />

                </RadioGroup>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/aux1CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/aux1" />

                    <CheckBox
                        android:id="@+id/aux2CheckBox"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/aux2" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/playSelectionButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/colorPlay"
            android:onClick="playbackHandler"
            android:text="@string/play_selection" />

    </LinearLayout>

    <!-- //////////////////////////////////////////////// -->

</LinearLayout>
